{
  "name": "todo-gui-app",
  "version": "1.0.0",
  "description": "A desktop to-do application built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "package": "electron-packager . Tasky --platform=win32 --arch=x64 --out=dist --overwrite --icon=icon.png"
  },
  "keywords": [
    "electron",
    "todo",
    "desktop",
    "gui"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.example.todoapp",
    "productName": "Tasky",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "tasks.txt",
      "icon.png"
    ],
    "win": {
      "target": "portable",
      "icon": "icon.png",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
